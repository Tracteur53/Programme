<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".Fish.PageType">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping Cart"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:drawablePadding="9dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        tools:context=".MainActivity"
        >

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:collapseColumns="4,4"
            android:background="#f1f1f1"
            >

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Quantity  "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Cost"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="Large Angelfish"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginHorizontal="1dp"
                    android:padding="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="33.00$"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="20dp"/>
                <TextView
                    android:id="@+id/shareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawable="@drawable/delete"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_weight="1"/>


            </TableRow>


        </TableLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/subTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub Total: 33.00$"
        android:textSize="23dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        />
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:drawableTop="@drawable/reset"
            android:drawablePadding="9dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="#f1f1f1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/checkoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="20dp"
            android:drawableTop="@drawable/checkout"
            android:paddingTop="8dp"
            android:background="#f1f1f1"
            android:drawablePadding="9dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            />
        ></LinearLayout>

</RelativeLayout>